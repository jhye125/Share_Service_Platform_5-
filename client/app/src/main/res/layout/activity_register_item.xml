<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.RegisterItemActivity">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="20dp"
                android:layout_margin="15dp"
                android:src="@drawable/register_item_title" />

            <ImageView
                android:id="@+id/register_photo"
                android:layout_width="397dp"
                android:layout_height="256dp"
                android:layout_gravity="center"
                android:src="@drawable/addphoto"
                android:background="@drawable/border"/>


            <TextView
                android:id="@+id/register_category"
                android:layout_width="399dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:background="@drawable/border"
                android:text="   카테고리 선택"
                android:gravity="center_vertical"
                android:layout_marginTop="5dp"
                android:textColor="#ff000000"
                android:singleLine="true"
                android:clickable="true"
                android:onClick="selectCategory"
                android:textSize="12sp"/>

            <EditText
                android:id="@+id/register_title"
                android:layout_width="399dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:background="@drawable/border"
                android:hint="   상품 이름 입력"
                android:singleLine="true"
                android:textSize="12sp"/>

            <EditText
                android:id="@+id/register_price"
                android:layout_width="399dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:background="@drawable/border"
                android:hint="   가격 입력"
                android:singleLine="true"
                android:inputType="number"
                android:textSize="12sp"/>


            <TextView
                android:id="@+id/register_date"
                android:layout_width="399dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:background="@drawable/border"
                android:text="   공유 날짜 선택"
                android:gravity="center_vertical"
                android:layout_marginTop="5dp"
                android:textColor="#ff000000"
                android:singleLine="true"
                android:clickable="true"
                android:onClick="selectDate"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/register_location"
                android:layout_width="399dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:background="@drawable/border"
                android:text="   위치 선택"
                android:gravity="center_vertical"
                android:layout_marginTop="5dp"
                android:textColor="#ff000000"
                android:singleLine="true"
                android:clickable="true"
                android:onClick="selectLocation"
                android:textSize="12sp"/>

            <EditText
                android:id="@+id/register_content"
                android:layout_width="399dp"
                android:layout_height="205dp"
                android:layout_gravity="center"
                android:layout_marginTop="7dp"
                android:background="@drawable/border"
                android:hint="   내용 입력"
                android:inputType="textCapSentences"
                android:minLines="10"
                android:overScrollMode="always"
                android:scrollbarStyle="insideInset"
                android:scrollbars="vertical"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/btnregister"
                android:layout_width="89dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginTop="6dp"
                android:src="@drawable/register_btn" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>