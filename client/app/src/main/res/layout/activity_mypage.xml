<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.HomeActivity">

    <TextView
        android:id="@+id/mypage_header"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="#E5EBEB"
        android:gravity="center"
        android:text="마이페이지"
        android:textSize="8pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="-28dp" />

    <TextView
        android:id="@+id/mypage_id_box"
        android:layout_width="383dp"
        android:layout_height="104dp"
        android:background="#E5EBEB"
        android:gravity="center"
        android:textSize="8pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.123" />

    <ImageView
        android:id="@+id/mypage_picture"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:gravity="center"
        android:src="@drawable/sample_pro"
        app:layout_constraintBottom_toBottomOf="@+id/mypage_id_box"
        app:layout_constraintEnd_toEndOf="@+id/mypage_id_box"
        app:layout_constraintHorizontal_bias="0.043"
        app:layout_constraintStart_toStartOf="@+id/mypage_id_box"
        app:layout_constraintTop_toTopOf="@+id/mypage_id_box"
        app:layout_constraintVertical_bias="0.526" />

    <ImageButton
        android:id="@+id/share2"
        android:layout_width="74dp"
        android:layout_height="72dp"
        android:background="@android:color/transparent"
        android:clickable="true"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:src="@drawable/mypage_shared2_ic"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mypage_id_box"
        app:layout_constraintVertical_bias="0.172" />

    <ImageButton
        android:id="@+id/share1"
        android:layout_width="76dp"
        android:layout_height="71dp"
        android:background="@android:color/transparent"
        android:clickable="true"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:src="@drawable/mypage_shred_ic"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.119"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/share2"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/share3"
        android:layout_width="74dp"
        android:layout_height="72dp"
        android:background="@android:color/transparent"
        android:clickable="true"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:src="@drawable/mypage_review"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.866"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/share2"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/mypage_user_name"
        android:layout_width="200dp"
        android:layout_height="26dp"
        android:gravity="left"
        android:text="User_id"
        android:textSize="7pt"
        app:layout_constraintBottom_toBottomOf="@+id/mypage_id_box"
        app:layout_constraintEnd_toEndOf="@+id/mypage_id_box"
        app:layout_constraintHorizontal_bias="0.672"
        app:layout_constraintStart_toStartOf="@+id/mypage_id_box"
        app:layout_constraintTop_toTopOf="@+id/mypage_id_box"
        app:layout_constraintVertical_bias="0.217" />

    <TextView
        android:id="@+id/mypage_user_email"
        android:layout_width="200dp"
        android:layout_height="26dp"
        android:gravity="left"
        android:text="User_email"
        android:textSize="7pt"
        app:layout_constraintBottom_toBottomOf="@+id/mypage_id_box"
        app:layout_constraintEnd_toEndOf="@+id/mypage_id_box"
        app:layout_constraintHorizontal_bias="0.672"
        app:layout_constraintStart_toStartOf="@+id/mypage_id_box"
        app:layout_constraintTop_toTopOf="@+id/mypage_id_box"
        app:layout_constraintVertical_bias="0.717" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#E5EBEB"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:menu="@menu/menu_bottom"
        app:labelVisibilityMode="labeled" />




</androidx.constraintlayout.widget.ConstraintLayout>